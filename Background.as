package  {	import flash.display.MovieClip;	import flash.display.Graphics;	import flash.display.Bitmap;	import flash.display.BitmapData	public class Background extends MoveObject{		var c:uint = Math.random() *  0xFFFFFF		var b:BitmapData = new BitmapData(10,10)		//var color:uint		public function Background(width:int,height:int) {			// constructor code			drawBackground(width,height)		}		public function drawBackground(width,height){			var g:Graphics = this.graphics;			g.clear()			//g.lineStyle(2,0x000000,1,true,"none","none","mitre",3)						//g.lineBitmapStyle(new Bitmap2(),null,false,true)						g.beginBitmapFill(b,null,true,true)			g.drawRect(0,0,width,height)			g.beginFill(c,.5)			g.drawRect(0,0,width,height)			g.endFill()			cacheAsBitmap = true					}		public function matchSizeOf(width,height){			drawBackground(width,height)		}		public function set color(e:uint):void{			c = e			drawBackground(width,height)		}		public override function set height(height:Number):void{			height = height			drawBackground(width,height)		}		public override function set width(width:Number):void{			width = width			drawBackground(width,height)		}		public function set bitmap(e:BitmapData):void{			b = e			drawBackground(width,height)		}	}}